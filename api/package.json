{
  "name": "@gym-pass/api",
  "version": "1.0.0",
  "description": "The Gym Pass App API",
  "main": "index.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx watch --clear-screen=false --env-file=.env src/server.ts",
    "build": "tsup src --out-dir build",
    "start": "node --env-file=.env build/server.js",
    "lint": "eslint src --fix",
    "test": "vitest run --dir src/use-cases",
    "test:watch": "vitest --dir src/use-cases",
    "pretest:e2e": "pnpm link ./prisma/vitest-environment-prisma",
    "test:e2e": "vitest run --dir src/http",
    "test:e2e:watch": "vitest --dir src/http",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [],
  "author": "wesley_freit",
  "license": "MIT",
  "dependencies": {
    "@fastify/jwt": "^8.0.1",
    "@prisma/client": "5.21.1",
    "bcrypt": "^5.1.1",
    "dayjs": "^1.11.10",
    "fastify": "4.26.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "20.11.16",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "6.20.0",
    "@typescript-eslint/parser": "6.20.0",
    "@vitest/coverage-v8": "^1.3.1",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "prettier": "3.2.5",
    "prisma": "5.21.1",
    "supertest": "^7.0.0",
    "tsup": "8.0.1",
    "tsx": "4.7.0",
    "typescript": "5.3.3",
    "vitest": "^1.3.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wesleyfreit/gym-pass.git"
  },
  "bugs": {
    "url": "https://github.com/wesleyfreit/gym-pass/issues"
  },
  "homepage": "https://github.com/wesleyfreit/gym-pass/tree/main/api#readme"
}